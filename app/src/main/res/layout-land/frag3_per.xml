<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/svMain"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
>

    <android.support.v7.widget.CardView
        android:id="@+id/cvEmploy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPadding="@dimen/activity_horizontal_margin"
        app:cardCornerRadius="@dimen/activity_horizontal_margin"
        android:layout_margin="@dimen/margin_card_view"
    >

        <android.support.constraint.ConstraintLayout
            android:id="@+id/clEmploy"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
            />

            <TextView
                android:id="@+id/tvEmployeeIDTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/frag3_employee_id"
                app:layout_goneMarginStart="@dimen/activity_horizontal_margin"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivPhoto"
            />

            <TextView
                android:id="@+id/tvEmployID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/AppTheme.Question"
                android:text="0000000"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvEmployeeIDTitle"
            />

            <TextView
                android:id="@+id/tvEmployNameTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/frag3_employ_name"
                app:layout_goneMarginStart="@dimen/activity_horizontal_margin"
                app:layout_constraintTop_toBottomOf="@+id/tvEmployeeIDTitle"
                app:layout_constraintStart_toEndOf="@+id/ivPhoto"
            />

            <TextView
                android:id="@+id/tvEmployName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/AppTheme.Question"
                android:text="Employ name"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                app:layout_constraintTop_toBottomOf="@+id/tvEmployID"
                app:layout_constraintStart_toEndOf="@+id/tvEmployNameTitle"
            />

            <TextView
                android:id="@+id/tvEmployTitleTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/frag3_employ_title"
                app:layout_goneMarginStart="@dimen/activity_horizontal_margin"
                app:layout_constraintTop_toBottomOf="@+id/tvEmployNameTitle"
                app:layout_constraintStart_toEndOf="@+id/ivPhoto"
            />

            <TextView
                android:id="@+id/tvEmployTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/AppTheme.Question"
                android:text="Employ Title"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                app:layout_constraintTop_toBottomOf="@+id/tvEmployName"
                app:layout_constraintStart_toEndOf="@+id/tvEmployTitleTitle"
            />

            <TextView
                android:id="@+id/tvEmployEmailTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/frag3_employ_email"
                android:minHeight="@dimen/min_btn_heigt"
                android:gravity="center_vertical"
                app:layout_goneMarginStart="@dimen/activity_horizontal_margin"
                app:layout_constraintTop_toBottomOf="@+id/tvEmployTitleTitle"
                app:layout_constraintStart_toEndOf="@+id/ivPhoto"
            />

            <TextView
                android:id="@+id/tvEmployEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/AppTheme.Question"
                android:text="employ@email.ru"
                android:minHeight="@dimen/min_btn_heigt"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                app:layout_constraintTop_toBottomOf="@+id/tvEmployTitle"
                app:layout_constraintStart_toEndOf="@+id/tvEmployEmailTitle"
            />

            <TextView
                android:id="@+id/tvEmployPhoneTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/frag3_employ_phone"
                android:minHeight="@dimen/min_btn_heigt"
                android:gravity="center_vertical"
                app:layout_goneMarginStart="@dimen/activity_horizontal_margin"
                app:layout_constraintTop_toBottomOf="@+id/tvEmployEmailTitle"
                app:layout_constraintStart_toEndOf="@+id/ivPhoto"
            />

            <TextView
                android:id="@+id/tvEmployPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/AppTheme.Question"
                android:text="Employ Phone"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:minHeight="@dimen/min_btn_heigt"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@+id/tvEmployEmail"
                app:layout_constraintStart_toEndOf="@+id/tvEmployPhoneTitle"
            />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</ScrollView>